@model GitCandy.Models.TeamModel

@{
    ViewBag.Title = string.Format(SR.Shared_TitleFormat, string.Format(SR.Team_DetailTitle, Model.Name));
}

<h4>@string.Format(SR.Team_DetailTitle, Model.Name)</h4>


@if (Model != null)
{
    <div class="span8">
        <div class="row">
            <div class="span2 text-right lead muted">@Html.DisplayNameFor(s => s.Name)</div>
            <span class="span5 text-left lead">@Model.Name</span>
        </div>
        <div class="row">
            <div class="span2 text-right lead muted">@Html.DisplayNameFor(s => s.Members)</div>
            <span class="span5 text-left lead">@Html.DisplayFor(s => s.Members)</span>
        </div>
        <div class="row">
            <div class="span2 text-right lead muted">@Html.DisplayNameFor(s => s.Repositories)</div>
            <span class="span5 text-left lead">@Html.DisplayFor(s => s.Repositories)</span>
        </div>
        <div class="row">
            <div class="span2 text-right lead muted">@Html.DisplayNameFor(s => s.Description)</div>
            <pre class="span5 text-left lead">@Model.Description</pre>
        </div>

        <div class="form-actions">
            <div class="pull-right">
                @Html.ActionLink(SR.Team_Members, "Users", new { name = Model.Name }, new { @class = "btn" })
                @Html.ActionLink(SR.Shared_Edit, "Edit", new { name = Model.Name }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
